@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="container">


    <form class="form-group border w-50" method="post" id="currentForm" autocomplete="off">
        <div class="form-group ms-2">
            <label for="firstName" class="col-sm-2">Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control w-50" name="Name" id="firstName" placeholder="First name">
            </div>
        </div>

        <div class="form-group ms-2">
            <label for="Surname" class="col-sm-2">Surname</label>
            <div class="col-sm-10">
                <input type="text" class="form-control w-50" name="Surname" id="Surname" placeholder="Last name">
            </div>
        </div>

        <div class="form-group mt-2">
            <div class="col-sm-10">

                <button type="submit"
                        id="btn-submit"
                        class="btn btn-outline-dark ms-2 mb-2"
                        aria-keyshortcuts="Ctrl+Q">
                    Enter
                </button>

            </div>
        </div>

    </form>
    
    <form class="mt-lg-4">

        <div class="row">
            <div class="col fw-bold">
                Keys overridden
            </div>
        </div>

        <div class="row w-25">
            <ul class="list-group">
                <li class="list-group-item"><kbd>alt</kbd> + <kbd>a</kbd>&nbsp; open about page</li>
                <li class="list-group-item"><kbd>alt</kbd> + <kbd>0</kbd></li>
                <li class="list-group-item"><kbd>ctrl</kbd> + <kbd>q</kbd> &nbsp; Submit form</li>
                <li class="list-group-item"><kbd>alt</kbd> + <kbd>🡒</kbd></li>
                <li class="list-group-item"><kbd>F5</kbd></li>
            </ul>
        </div>
    </form>

</div>

@section Scripts
    {
    <script>
        $(document).ready(function (e) {
            $Application.setKeys();
        });
        window.addEventListener('beforeunload', (event) => {
            $Application.removeKeys();
        });
    </script>
}

