@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    ViewData["message"] = "Sweet alert code samples";
}

<script src="js/index.js"></script>
<link rel="stylesheet" href="css/toast.css" />

<div class="container">


    <div class="d-flex justify-content-center text-center w-75 position-absolute top-50 start-50 translate-middle">
        <p class="card-text fs-4">Provides several code samples using <a href="https://sweetalert2.github.io" target="_blank">sweet alert</a></p>
    </div>

    <form method="post" id="form1" class="mt-5">
        <div class="d-grid gap-2 col-6 mx-auto">

            <input type="hidden" asp-for="IpAddress" id="_ipAddress" />

            <div class="row">
                <button type="button" id="getAddress" class="btn btn-primary">Enter IP Address</button>
            </div>

        </div>

    </form>

</div>

<script>
    document.getElementById('getAddress').addEventListener("click", function () {
        GetIpAddressInput();
    });

    window.onload = function () {

        const toast = Swal.mixin({
            toast: true,
            position: 'bottom-end',
            iconColor: 'white',
            customClass: { popup: 'colored-toast' },
            showConfirmButton: false,
            timer: 3000,
            timerProgressBar: true,
            didOpen: (toast) => {
                toast.addEventListener('mouseenter', Swal.stopTimer);
                toast.addEventListener('mouseleave', Swal.resumeTimer);
            }
        });

        toast.fire({
            icon: 'info',
            title: '@ViewData["message"]'
        });

    };
</script>



