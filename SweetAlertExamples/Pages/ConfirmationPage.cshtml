@page
@model SweetAlertExamples.Pages.ConfirmationPageModel
@{
}


<script language="javascript" src="js/SweetDialogs.js"></script>

<div class="container">

    <form method="post" id="form1" class="mt-5">

        <div class="d-grid gap-2 col-6 mx-auto">
            <input type="hidden" asp-for="Confirmation" id="_confirmation"/>
            <input type="hidden" asp-for="ThreeButton" id="_confirmation1"/>

            <input type="button" class="btn btn-primary mt-lg-4" value="Two button question" id="confirmLink" onclick="$SweetDialogs.TwoButtonQuestion()"/>

            <input type="button" class="btn btn-primary mt-lg-4" value="Three button question" id="confirm" onclick="$SweetDialogs.ThreeButtonQuestion()"/>
            <input type="text" asp-for="Results" id="_resultItem" class="border-0"/>
        </div>

    </form>

</div>


