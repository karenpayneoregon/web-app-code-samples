@page
@model SweetAlertExamples.Pages.PasswordPageModel
@{
}

<script src="js/index.js"></script>

<div class="container">
    
    <div class="d-flex justify-content-center text-center w-75 position-absolute top-50 start-50 translate-middle">
        <p class="card-text fs-4">See console window for results</p>
    </div>
    <form method="post" id="form1" class="mt-5">
        <div class="d-grid gap-2 col-6 mx-auto">

            <input type="hidden" asp-for="Password" id="_password" />
            
            <div class="row">
                <button type="button" id="getPassword" class="btn btn-primary">Enter password</button>
            </div>
            
        </div>
        
    </form>

</div>

<script>
    document.getElementById("getPassword").addEventListener("click",
        function() {
            GetPassword();
        });
</script>

