@page
@model WorkingWithTempData.Pages.ListPeopleModel

@{
    ViewData["Title"] = "ListPeople";
}


<div class="container">
    
    <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.People[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.People[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.People[0].EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.People[0].SitePassword)
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.People) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SitePassword)
                </td>
            </tr>
        }
        </tbody>
    </table>
    
    <form asp-page-handler="ToIndex">
        <input type="hidden" asp-for="@Model.Person.FirstName" />
        <input type="hidden" asp-for="@Model.Person.LastName" />
        <button class="btn btn-primary">Back to Index</button>
    </form>
</div>
