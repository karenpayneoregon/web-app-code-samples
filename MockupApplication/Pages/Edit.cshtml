@page
@model MockupApplication.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<div class="d-none">
    <input asp-for="Message"/>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserLogin.Id" />
            <div class="form-group">
                <label asp-for="UserLogin.EmailAddress" class="control-label"></label>
                <input asp-for="UserLogin.EmailAddress" class="form-control" />
                <span asp-validation-for="UserLogin.EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserLogin.Pin" class="control-label"></label>
                <input asp-for="UserLogin.Pin" class="form-control" />
                <span asp-validation-for="UserLogin.Pin" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-page="./Index" class="btn btn-primary">Index</a>
</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
