@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@*<link rel="stylesheet" href="css/debugger.css" />*@

<style>
    input[type="number"]::-webkit-outer-spin-button,
    input[type="number"]::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    input[type="number"] {
        -moz-appearance: textfield;
    }
    form label{
        color: chocolate;
        font-weight: bold;
    }
</style>

<div class="container p-3">


    <div class="row">
        <div class="col-10">
            <form method="post">
                <div class="col-sm-2 mb-3">
                    <label for="testString" class="form-label">Test String</label>
                    <input type="text" id="testString" class="form-control form-control-sm" value=@ViewData["Test String"] />
                </div>
                <div class="col-sm-2 mb-3">
                    <label for="testInt" class="form-label">Test int</label>
                    <input type="number" id="testInt" class="form-control form-control-sm" value=@ViewData["Test Int"] />
                </div>
                <div class="col-sm-2 mb-3">
                    <input asp-for="IsChecked" />
                    <label asp-for="IsChecked">Checked</label>
                </div>

                <div class="col-sm-2 mb-3">
                    <input type="submit" class="w-100 btn btn-primary" value="Submit" asp-page-handler="Session" />
                </div>

            </form>
        </div>
    </div>
</div>
