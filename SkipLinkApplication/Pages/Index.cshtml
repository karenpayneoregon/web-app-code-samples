    <form class="form-group" method="post" id="main-content" autocomplete="on">

        @*<input type="hidden" asp-for="UseAutoComplete" id="useAutoComplete"/>*@
        <div class="w-25 mb-lg-2">
            <select class="form-select" aria-label="Default select example">
                <option selected>Open this select menu</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
            </select>
        </div>


        <div class="form-group" >
            <label for="firstName" class="col-sm-2" aria-describedby="firstName">Name</label>
            <div class="col-sm-10">
                <input type="text"
                       class="form-control w-25"
                       value="@Model.Introduction.Name"
                       name="Name"
                       id="firstName"
                       aria-label="Enter your first name"
                       autocomplete="off"
                       placeholder="First name">
            </div>
        </div>

        <div class="form-group">
            <label for="Surname" class="col-sm-2">Surname</label>
            <div class="col-sm-10">
                <input type="text"
                       class="form-control w-25"
                       name="Surname"
                       id="Surname"
                       aria-label="Enter your surname"
                       autocomplete="off"
                       placeholder="Last name">
            </div>
        </div>

        <div class="form-group mt-2">
            <div class="col-sm-10">

                <button type="submit"
                        id="btn-submit"
                        class="btn btn-outline-dark"
                        aria-keyshortcuts="Ctrl+Q">
                    Enter
                </button>

            </div>
        </div>

    </form>
</div>

@section scripts{
    <script>
        $(document).ready(function () {

            var formAutoCompleteSetting = $('#useAutoComplete').val();
            if (formAutoCompleteSetting === 'False') {
                $("#currentForm").attr("autocomplete", "off");
            }

        });

 
        $(this).on('keydown', function (event) {
            if (event.key === '0' && event.altKey) {
                $("#skipper").focus();
            }
        });
    </script>
}