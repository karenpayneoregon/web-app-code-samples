}

<link href="~/lib/limonte-sweetalert2/sweetalert2.min.css" rel="stylesheet" />
<script src="~/lib/limonte-sweetalert2/sweetalert2.min.js"></script>

<style>
    .swal-wide {
        width: 650px !important;
    }
</style>

<h1>Code sample</h1>

<div class="container">

    <h2>@ViewData["header"]</h2>

    <form class="form-group" method="post">

        <div class="form-group">
            <label for="firstName" class="col-sm-2">Name</label>
            <div class="col-sm-10">
                <input type="text" tabindex="1" class="form-control w-25" value="@Model.Introduction.Name" name="Name" id="firstName" placeholder="First name">
            </div>
        </div>

        <div class="form-group">
            <label for="Surname" class="col-sm-2">Surname</label>
            <div class="col-sm-10">
                <input type="text" tabindex="2" class="form-control w-25" name="Surname" id="Surname" placeholder="Last name">
            </div>
        </div>

        <div role="radiogroup">
            <fieldset>

                <legend >Gender</legend>
                <div role="radiogroup" tabindex="3">
                    @foreach (string gender in Model.Genders)
                    {

                        <div class="form-check">
                            @if (@gender == "Male")
                            {

                                <input type="radio"
                                       class="form-check-input"
                                       asp-for="Gender"
                                       value="@gender"
                                       tabindex="@Model.RadioIndex"
                                       aria-description="@gender"
                                       aria-checked="true"
                                       role="radio"
                                       checked="checked"
                                       id="Gender@(gender)"/>
                            }
                            else
                            {
                                <input type="radio"
                                       class="form-check-input"
                                       asp-for="Gender"
                                       value="@gender"
                                       tabindex="@Model.RadioIndex"
                                       aria-description="@gender"
                                       aria-checked="false"
                                       role="radio"
                                       id="Gender@(gender)"/>
                            }


                            <label class="form-check-label" for="Gender@(gender)">@gender</label>

                            @{
                                Model.RadioIndex += 1;
                            }
                        </div>

                    }

                </div>
            </fieldset>


        </div>



        <div class="form-group mt-2">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-outline-dark">Enter</button>
            </div>
        </div>

    </form>
</div>



