@page
@model Form1Model
@{
}

<link href="~/lib/limonte-sweetalert2/sweetalert2.min.css" rel="stylesheet" />
<script src="~/lib/limonte-sweetalert2/sweetalert2.min.js"></script>

<style>
    .swal-wide{
        width:650px !important;
    }
</style>

<div class="container">

    <h3>@ViewData["sentence"]</h3>

    <form class="form-group" method="post">

        <div class="form-group">
            <label for="firstName" class="col-sm-2">Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control w-25" value="@Model.Introduction.Name" name="Name" id="firstName" placeholder="First name">
            </div>
        </div>

        <div class="form-group">
            <label for="Surname" class="col-sm-2">Surname</label>
            <div class="col-sm-10">
                <input type="text" class="form-control w-25" name="Surname" id="Surname" placeholder="Last name">
            </div>
        </div>
        
        <div>

            @foreach (string gender in Model.Genders)
            {
                <div class="form-check">

                    <input type="radio"
                           class="form-check-input"
                           asp-for="Gender"
                           value="@gender"
                           aria-description="@gender"
                           id="Gender@(gender)" />

                    <label class="form-check-label" for="Gender@(gender)">@gender</label>

                </div>

            }

        </div>        
        


        <div class="form-group mt-2">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-outline-dark">Enter</button>
            </div>
        </div>

    </form>
</div>



@if (ViewData["Message"] != null)
{
    <script type="text/javascript">
            window.onload = function () {
            Swal.fire({
                icon: 'info',
                title: "@ViewData["Message"]",
                customClass: 'swal-wide',
                showConfirmButton: false,
                timer: 1000
            })
            };
        </script>
}