@page
@model RadioButtonsExample.Pages.RadioButton3Model
@{
}

<link href="~/lib/limonte-sweetalert2/sweetalert2.min.css" rel="stylesheet" />
<script src="~/lib/limonte-sweetalert2/sweetalert2.min.js"></script>

<div class="container">
    <form method="post" class="border border-2 w-50 p-3 mt-5 shadow rounded">

        <div class="form-group row">
            <div class="col">
                <input asp-for="CodingLookup.Option1" type="radio" name="option" value="option0" id="option0" />
                <label for="option0">Not coding.</label>
            </div>
        </div>

        <div class="form-group row">
            <div class="col">
                <input asp-for="@Model.CodingLookup.Option3" type="radio" name="option" value="option1" id="option1" />
                <label for="option1">Reviewed 1</label>
            </div>
        </div>

        <div class="form-group row">
            <div class="col">
                <input asp-for="@Model.CodingLookup.Option2" type="radio" name="option" value="option2" id="option2" />
                <label for="option2">Reviewed 2</label>
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <input asp-for="@Model.CodingLookup.Option4" type="radio" name="option" value="option3" id="option3" />
                <label for="option3">Submitted</label>
            </div>
        </div>
        <input type="submit" class="btn btn-primary w-100"  value="post"/>
    </form>
</div>

@if (ViewData["Message"] != null)
{
    <script type="text/javascript">
            window.onload = function () {
                Swal.fire({
                    icon: 'info',
                    title: "@ViewData["Message"]",
                    customClass: 'swal-wide',
                    showConfirmButton: false,
                    timer: 1000
                });
            };
        </script>
}   