@page
@model PreventDoublePostBack.Pages.index3Model
@{
}
<style>

    legend {
        background: black;
        color: white;
        border: solid 1px black;
        -webkit-border-radius: 8px;
        -moz-border-radius: 8px;
        border-radius: 8px;
        padding-top: 6px;
        padding-bottom: 6px;

    }

    fieldset {
        border:1px solid #999;
        border-radius:8px;
        box-shadow:0 0 10px #999;
    }

</style>

<h1 class="fs-4">Choices</h1>

<div class="container pt-3">
    
    <fieldset id="mainFieldset" class="border border-dark rounded-3 p-3 mt-3 mb-3">
        <legend class="float-none w-auto fs-6 px-1" id="description">
            <span class="fw-bold ledgendSpan">Side by side</span>
        </legend>
        <form id="sideForm">
            <div class="mb-3">
                <div class="d-inline-flex align-items-center">
                    <label for="input1" class="form-label" style="min-width: 100px !important">User</label>
                    <input type="text" class="form-control" id="input1" style="width: 12em">

                </div>
            </div>

            <div class="mb-3">
                <div class="d-inline-flex align-items-center">
                    <label for="exampleInputPassword1" class="form-label" style="min-width: 100px !important">Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" style="width: 12em" >
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Continue</button>
        </form>
    </fieldset>
    
    <fieldset id="mainFieldset1" class="border border-dark rounded-4 p-3 mt-3 mb-3">
        <legend class="float-none w-auto fs-6 px-1" id="description2">
            <span class="fw-bold ledgendSpan">Top/Bottom</span>
        </legend>
        <form id="topBottomForm">
            <div class="mb-3">
                <label for="exampleInputEmail2" class="form-label">User</label>
                <input type="email" class="form-control" id="exampleInputEmail2" style="width: 12em">
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword2" class="form-label">Password</label>
                <input type="password" class="form-control" id="exampleInputPassword2" style="width: 12em">
            </div>

            <button type="submit" class="btn btn-primary">Continue</button>
        </form>
    </fieldset>
    
    <fieldset id="mainFieldset3" class="border border-dark rounded-4 p-3 mt-3 mb-3">
        <legend class="float-none w-auto fs-6 px-1" id="description3">
            <span class="fw-bold ledgendSpan">Floating label</span>
        </legend>
        <form id="floatForm">
            <div class="form-floating mb-3">
                <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput">User</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword">Password</label>
            </div>

            <button type="submit" class="btn btn-primary mt-3">Continue</button>
        </form>
    </fieldset>


</div>