@page
@model PreventDoublePostBack.Pages.Index1Model
@{
}

<h1 class="fs-5 text-success">Personal information</h1>
<form method="post" 
      id="demoForm" 
      class="needs-validation was-validated mt-3" 
      novalidate="" 
      autocomplete="off">
   
    <div class="row g-3 mb-2">
        <div class="col-auto">
            <label for="txtFirstName" class="form-label">First name:</label>
        </div>
        <div class="col-auto">
            <input type="text" 
                   class="form-control" 
                   id="txtFirstName" 
                   name="FirstName" 
                   value="Karen" 
                   required="">
            <div class="invalid-feedback">
                Please enter your first name
            </div>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-auto">
            <label for="txtLastName" class="form-label">Last name:</label>
        </div>
        <div class="col-auto">
            <input type="text" 
                   class="form-control" 
                   id="txtLastName" 
                   name="LastName" 
                   value="Payne" 
                   required="">
            <div class="invalid-feedback">
                Please enter your last name
            </div>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-auto" style="width: 15.5em">
        </div>
        <div class="col-auto">
            <input type="submit" 
                   value="Submit" 
                   class="btn btn-primary float-end" 
                   asp-page-handler="Submit" />
        </div>
    </div>
 
</form>


@section Scripts
    {
    <script type="text/javascript" src="js/index.js"></script>
}
@if (ViewData["JavaScript"] != null)
{
    <script>
        @Html.Raw(ViewData["JavaScript"]);
    </script>
}
